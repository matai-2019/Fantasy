{
  "name": "boilerplate-react-webpack",
  "version": "0.2.2",
  "description": "A webpack React starter",
  "repository": "https://github.com/matai-2019/Fantasy.git",
  "main": "server/index.js",
  "author": "EDA",
  "license": "ISC",
  "scripts": {
    "win:start": "run-s build server",
    "win:dev": "run-p dev:server dev:client",
    "dev:client": "webpack --watch",
    "dev:server": "nodemon .",
    "start": "node server/index",
    "localStart": "webpack && node server",
    "dev": "webpack --watch & nodemon server",
    "test": "jest --watchAll",
    "deploy:sandbox": "webpack && git push heroku sandbox:master",
    "heroku-postbuild": "webpack -p"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-object-rest-spread"
    ]
  },
  "jest": {
    "setupFiles": [
      "./tests/setup.js"
    ]
  },
  "cacheDirectories":["build"],
  "dependencies": {
    "copy-webpack-plugin": "^5.0.3",
    "express": "^4.16.4",
    "firebase": "^6.3.1",
    "npm-run-all": "^4.1.5",
    "react-textarea-autosize": "^7.1.0",
    "semantic-ui-react": "^0.87.3",
    "socket.io": "^2.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.7.1",
    "babel-loader": "^8.0.5",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "jest": "^24.7.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "nodemon": "^1.19.1",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.2.1"
  }
}
